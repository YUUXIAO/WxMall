/* components/tabs/tabs.wxss */
.content-scroll{
    width: 100%;
    white-space: nowrap;
    background: #fff;
    box-sizing: border-box;
}
.content{
    position: relative;
}


.tab-item{
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0 30rpx;
    border: 1px solid red;
}
.text{
    transition: color 0.2s
}

.curActive{
    color: red;
}




.tab-bar{
    position: absolute;
    height: 2px;
    border-radius: 2px;
    border: 1px solid red;
    transition: all 0.3s;
    bottom: 0;left: 30rpx;
}