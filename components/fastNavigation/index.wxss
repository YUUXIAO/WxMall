/* components/fastNavigation/index.wxss */
@import "../../dist/css/icon.wxss";


.fastNavigation{
    border: 1px soldi red;
    position: fixed;
    bottom: 100rpx;
    right: 20rpx;
    width: 80rpx;
    z-index: 5;
    border-radius: 20rpx;
}
/* 导航元素 */
.nav-item {
    position: absolute;
    bottom: 0;
    padding: 0;
    width: 80rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    background: rgba(0,0,0,0.4);
    transform: rotate(0deg);
    opacity: 0;
    border-radius: 50%;
}
.iconfont{
    color: #fff;
    font-size: 40rpx;
}

/* 导航开关 */
.nav-item-switch{
    opacity: 1;
}
.switch-click{
    background: var(--mainColor);
}

/* 显示动画 */
.show_20{
    bottom: 90rpx;
    animation: show_20 0.3s forwards;
}
.hide_20 {
  bottom: 0;
  animation: hide_20 0.3s;
  opacity: 0;
}
@keyframes show_20{
    from{
        bottom: 0;
        transform: rotate(0deg);
        opacity: 0;
    }
    to{
        bottom: 90rpx;
        transform: rotate(360deg);
        opacity: 1;
    }
}
@keyframes hide_20{
    from{
        bottom: 90rpx;
        transform: rotate(360deg);
        opacity: 1;
    }
    to{
        bottom: 0;
        transform: rotate(0deg);
        opacity: 0;
    }
}

