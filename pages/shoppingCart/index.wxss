/* pages/shoppingCart/index.wxss */
page,
.main {
  width: 100%;
  background: #efefef;
  padding-bottom: 50rpx;
}
/* 购物车列表内容-Start */
.cart-list {
  width: 100%; height: 240rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.cart-content {
  height: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  transition: left 0.1s ease-in-out;
  background: #fff;
  position: absolute;
  z-index: 5;
}

.cart-select-icon {
  width: 60rpx;
}

.cart-image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.cart-image image {
  width: 100%;
  height: 100%;
}

.cart-base {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 410rpx;
  height: 100%;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.cart-base > view {
  font-size: 30rpx;
}

.cart-title {
  font-weight: bold;
}

.cart-count {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.count-group {
  width: 180rpx;
  height: 60rpx;
  border: 1px solid #aaa;
  display: flex;
  justify-content: space-between;
}

.count-group > view {
  flex: 1;
  height: 100%;
  text-align: center;
  line-height: 60rpx;
}

.countNumber {
  border-right: 1px solid #aaa;
  border-left: 1px solid #aaa;
}
.emptyCart {
  width: 100%;
  height: calc(100% - 100rpx);
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
}

.addGoods {
  text-align: center;
  font-size: 32rpx;
  color: #888;
  line-height: 50rpx;
}

.slideBar {
  position: absolute;
  right: 0;
  z-index: 4;
}
.deleteGoods {
  background: red;
  color: #fff;
  width: 150rpx;
  height: 240rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.deleteGoods image {
  display: inline-block;
  text-align: center;
  width: 64rpx;
  height: 64rpx;
}
/* 购物车底部 */

.cart-footer {
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #efefef;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
  padding-left: 20rpx;
  z-index: 10;
  background: #fff;
}

.cart-footer > view {
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-select text {
  font-size: 30rpx;
  color: #888;
}

.order-goods {
  width: 250rpx;
  height: 100%;
  background: red;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  letter-spacing: 10rpx;
  margin-left: 20rpx;
}
