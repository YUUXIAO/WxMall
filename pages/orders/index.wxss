/* pages/orders/index.wxss */

.main {
  width: 100%;
  border: 1px solid red;
}

/* 收货地址信息-Start */

.address {
  width: 100%;
  height: 130rpx;
  background: #efefef;
  color: #333;
  border: 1px solid green;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}

.address_receive {
  width: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border: 1px solid green;
}

.address_tag {
  width: 60rpx;
  border: 1px solid red;
  text-align: center;
  margin: 0 auto;
  border-radius: 8rpx;
  color: red;
  font-size: 24rpx;
}

.address_info {
  border: 1px solid red;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.address_detail {
  width: 100%;
}

.address_enter {
  width: 60rpx;
  border: 1px solid blue;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

/* 收货地址信息-End */
