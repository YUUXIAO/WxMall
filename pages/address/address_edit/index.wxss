/* pages/address/address_add/index.wxss */

.addressEdit {
  width: 100%;
  height: 100%;
}

.inputView {
  padding: 15rpx 15rpx;
  margin-bottom: 10rpx;
  border-bottom: 1px solid #888;
}
.address{
  color: #888;
  font-size: 30rpx;
}
.inputView input {
  font-size: 30rpx;
}

/* 地址选择器  */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.address-warpper {
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  bottom: -680rpx;
}

.address-header {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #efefef;
}
.header-tab{
  display: flex;
  justify-content: flex-start;
}
.tab-item{
  margin-right: 25rpx;
  height:100rpx;
  position: relative;
}

.tab-selected-item:after{
  content: "";
  width: 90rpx;
  height: 10rpx;
  background: #666;
  position: absolute;
  bottom: 0;left: -11rpx;
}
.preventSubmit{
  color: #aaa;
}

.address-selector {
  width: 100%;
  height: 580rpx;
}

swiper {
  height: 100%;
}

.address-warppers {
  height: 100%;
}

.address-item {
  font-size: 38rpx;
  padding: 15rpx 20rpx;
}
