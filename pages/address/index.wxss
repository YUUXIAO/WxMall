/* pages/address/index.wxss */
page{
   background: url('https://cdn.it120.cc/images/weappshop/addr-line.png') no-repeat top center;
   background-size: 100% ;
}


/* 显示地址列表 */
.address-list {
  width: 100%;
  padding-bottom: 15rpx;
  box-sizing: border-box;
  color: #888;
  border-bottom: 1px solid #efefef;
}

.address-name {
  width: 200rpx;
  text-align: left;
}

.tag {
  font-size: 22rpx;
  color: #b5272e;
  display: inline-block;
  padding: 0 10rpx;
  border-radius: 12rpx;
  border: 1px solid #b5272e;
}

.name {
  font-size: 28rpx;
  padding-top: 15rpx;
  color: #333;
  line-height: 1;

}

.address-info {
  font-size: 26rpx;
  width: 100%;
}
.address-info text {
  display: block;
}

.address-edit {
  width: 100rpx;
  text-align: center;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.edit-image{
  width: 50rpx; 
}
.icon-edit{
  font-size:40rpx;
}

/* 没有保存地址显示-Start */

.no-address {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 300rpx;
}

.no-address-warp {
  width: 300rpx;
  font-size: 0;
}

.no-address-image {
  width: 100%;
  height: 200rpx;
}

.no-address-tip {
  display: block;
  color: #888;
  font-size: 32rpx;
  text-align: center;
}

.select-address {
  border: 1px solid red;
}

/* 没有保存地址显示-End */

/* 新建收货地址 */

.addAddress {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #b5272e;
  color: #fff;
  line-height: 100rpx;
  text-align: center;
  z-index: 100;
}
