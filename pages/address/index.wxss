/* pages/address/index.wxss */
page{
  border-top: 6rpx solid #888;
}
/* 显示地址列表 */
.address-list {
  width: 100%;
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  color: #888;
  border-bottom: 1px solid #efefef;
  justify-content: space-between
}

.address-name {
  width: 200rpx;
  text-align: left;
}

.tag {
  font-size: 22rpx;
  color: red;
  display: inline-block;
  padding: 2rpx 10rpx;
  border-radius: 12rpx;
  border: 1px solid red;
}

.name {
  font-weight: bold;
  font-size: 32rpx;
}

.address-info {
  font-size: 28rpx;
  width: 100%;
}

.address-info text {
  display: block;
}
.phone{
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.address-edit {
  width: 100rpx;
  text-align: center;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.edit-image{
  width: 50rpx; height: 50rpx;
}
.edit-image image{
  width: 100%; height: 100%;
}

/* 没有保存地址显示-Start */

.no-address {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.no-address-warp {
  width: 300rpx;
  font-size: 0;
}

.no-address-image {
  width: 100%;
  height: 200rpx;
}

.no-address-tip {
  display: block;
  color: #888;
  font-size: 32rpx;
  text-align: center;
}

.select-address {
  border: 1px solid red;
}

/* 没有保存地址显示-End */

/* 新建收货地址 */

.addAddress {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #888;
  color: #fff;
  line-height: 100rpx;
  text-align: center;
  z-index: 100;
}
