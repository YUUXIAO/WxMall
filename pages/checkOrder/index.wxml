<!--pages/checkOrder/index.wxml-->
<view class="page">
   <view class="address-info-box {{addressInfo?'':'address-info-add'}}">
       <view class="dis-flex flex-x-between flex-y-center address-info-cont" wx:if="{{addressInfo}}">
           <view class=" user-name">
               <text>{{addressInfo.name}}</text>
               <view class="user-name-tag">默认</view>
           </view>
           <view class="flex address-info">
               <view class="phone">{{addressInfo.phone}}</view>
               <view class="address list-hidden">{{addressInfo.region[0]}}{{addressInfo.region[1]}}{{addressInfo.region[2]}}{{addressInfo.address}}</view>
           </view>
           <view class="turn-arrow">
               <text class="iconfont icon-arrowright" />
           </view>
       </view>
       <view class="dis-flex flex-y-center no-address-cont" bindtap="addAddress" wx:else>
           <view class="dis-flex flex-x-center flex-y-center address-add-btn">
               <text class="iconfont icon-add" />  
           </view>
           <text class="address-add-text">新增收货地址</text>
       </view>
   </view>
   <view class="goods-info-box">
        <view class="dis-flex flex-x-between goods-info-list">
           <text class="goods-list-title">合计</text>
           <text class="goods-total-price">￥189</text>
        </view>
        <view class="dis-flex flex-x-between goods-info-list">
           <text class="goods-list-title">邮费</text>
           <text class="goods-delivery">￥0.00</text>
        </view>
        <view class="dis-flex flex-x-between goods-info-list">
           <text class="goods-list-title">备注</text>
           <view class="flex goods-remark">
               <input name="input" placeholder="填写与卖家协商内容" />
           </view>
       </view>
   </view>
   <view class="goods-lists-box">
       <view class="goods-lists-title">商品列表</view>
       <view class="goods-lists-cont">
           <view class="dis-flex flex-x-center goods-list">
                <view class="goods-list-image">
                   <image mode="scaleToFill" src="../../images/bg1.jpg"></image>
                </view>
                <view class="dis-flex flex-dir-column flex-x-between flex goods-list-info">
                    <view class="goods-list-title list-hidden">123123123123</view>
                    <view>
                        <text class="goods-list-price">￥199 </text>
                        <text class="goods-list-delprice">￥299</text>
                    </view>
                </view>
                <view class="dis-flex flex-x-center flex-y-center good-list-count">
                    <text>X 2</text>
                </view>
           </view>
           <view class="dis-flex flex-x-center goods-list">
                <view class="goods-list-image">
                   <image mode="scaleToFill" src="../../images/bg1.jpg"></image>
                </view>
                <view class="dis-flex flex-dir-column flex-x-between flex goods-list-info">
                    <view class="goods-list-title list-hidden">123123123123</view>
                    <view>
                        <text class="goods-list-price">￥199 </text>
                        <text class="goods-list-delprice">￥299</text>
                    </view>
                </view>
                <view class="dis-flex flex-x-center flex-y-center good-list-count">
                    <text>X 2</text>
                </view>
           </view>
       </view>
   </view>

   <view class="dis-flex flex-x-between footer-menu-box">
        <view class="dis-flex flex-dir-column flex-x-start flex pay-price">
           <text>实付金额：￥1908</text>
           <text class="good-delivery">邮费：￥0.00</text>
        </view>
        <view class="dis-flex flex-x-center flex-y-center pay-order-btn" bindtap="payOrder">付款</view>
   </view>
</view>
