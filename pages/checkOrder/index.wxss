/* pages/checkOrder/index.wxss */
.page{
    padding: 0;
    background: #efefef;
    min-height: 100vh;
}
.address-info-box{
    height: 120rpx;
    font-size: 26rpx;
    background: url('https://cdn.it120.cc/images/weappshop/addr-line.png') no-repeat bottom center;
    background-size: 100% ;
    background-color: #fafdcb;
    padding: 20rpx;
    box-sizing: border-box;
    border-top: 1px solid #efefef;
}
.address-info-add{
    background: #fff;
}



.no-address-cont{
    height: 100%;
}
.address-add-btn{
    width: 60rpx;
    height: 60rpx;
    background: #b5272e;
    color: #fff;
    border-radius: 10rpx;
}
.address-add-text{
    font-size: 30rpx;
    letter-spacing: 3rpx;
    padding-left: 20rpx;
}



.user-name{
    width: 90rpx;
}
.user-name text{
    width: 100%;
    display: inline-block;
}
.user-name-tag{
    font-size: 20rpx;
    color: #b5272e;
    padding: 0 7rpx;
    border: 1px solid #b5272e;
    border-radius: 5rpx;
    display: inline-block;
}
.address{
    color: #aaa;
}
.turn-arrow{
    width: 40rpx;
}



.goods-info-box{
    font-size: 30rpx;
    background: #fff;
    margin: 20rpx 0;
    padding: 0 20rpx;
    border-top: 1px solid #aaa;
    border-bottom: 1px solid #aaa;
    
}
.goods-info-list{
    padding: 10rpx 0;
    border-bottom: 1px solid #ddd;
    text-align: right;
}
.goods-info-list:last-child{
    border-bottom: 0;
}






.goods-lists-box{
    padding: 20rpx;
    background: #fff;
    color: #777;
}
.goods-lists-title{
    font-size: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-weight: bold;
   
}
.goods-list{
    padding: 20rpx 0;
    border-bottom: 1px solid #efefef;
}
.goods-list-image{
    width: 180rpx;
    height: 150rpx;
    overflow: hidden;
}
.goods-list-image image{
    width: 100%; height: 100%;
}
.goods-list-info{
    padding: 0 15rpx;
    box-sizing: border-box;
}
.goods-remark{
    padding-left: 1em;
}
.goods-list-title{
    color: #333;
}
.goods-list-price{
    font-size: 30rpx;
}
.goods-list-delprice{
    font-size: 26rpx;
    text-decoration: line-through;
    color: #aaa;
}
.good-list-count{
    width: 60rpx;
}






.footer-menu-box{
    width: 100%;
    position: fixed;
    left: 0; bottom: 0;
    height: 110rpx;
    background: #fff;
}
.pay-price{
    padding: 12rpx 20rpx;
    box-sizing: border-box;
}
.pay-price text{
    font-size: 30rpx;
    color: #b5272e;
}
.pay-price .good-delivery{
    font-size: 22rpx;
    color: #aaa;
}
.pay-order-btn{
    width: 200rpx;
    background: #b5272e;
    color: #fff;
    letter-spacing: 10rpx;
}