<!--pages/category/index.wxml-->
<view class="main">
  <!-- 左侧导航栏 -->
  <view class='category-nav'>
    <view class='category-item' wx:for='{{categoryNavigation}}' wx:key='index' wx:for-item='item'>
      {{item.name}}
    </view>
  </view>
  <!-- 右侧内容栏 -->
  <scroll-view>
    <block wx:for='{{products}}' wx:for-item='item'>
      <view class='category-products'>
        <view class='category-banner'>
          <image src="{{item.banner}}"></image>
        </view>
        <view class='category-title'>
          <text>{{item.title}}</text>
        </view>
        <view class='category-product' wx:for='{{product}}' wx:for-item='item'>
          <view class='product-image'>
            <image src="{{item.image}}"></image>
          </view>
          <view class='product-desc'>{{item.title}}</view>
        </view>
      </view>
    </block>
  </scroll-view>
