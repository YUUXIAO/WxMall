<view class="main">
  <!-- 左侧导航栏 -->
  <scroll-view class='category-nav' scroll-y>
    <view class='category-nav-item {{curIndex == index?"currItem":""}}' wx:for='{{categoryNavigation}}' wx:key='index' data-index="{{index}}" bindtap="switchTab">
    {{item.name}}
    </view>
  </scroll-view>
  <!-- 右侧内容栏 -->
  <view class='category-content'>
    <scroll-view scroll-y='true' scroll-with-animation="true">
       <view class="category-item-content" wx:for='{{getCategoryLists}}' wx:key="index">
           <view class="category-item-box">
             <text class="category-item-title">123123</text>
