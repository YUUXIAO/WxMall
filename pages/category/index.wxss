/* pages/category/index.wxss */

page {
  height: 100%;
}

/* 去掉默认滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.main {
  height: 100%;
  display: flex;
  justify-content: space-between;
}

/* 左侧导航栏-Start */

.category-nav {
  width: 180rpx;
  height: 100%;
  border-right: 1px solid #aaa;
  color: #888;
  text-align: center;
  font-size: 36rpx;
  position: relative;
  box-sizing: border-box;
}

.category-item {
  padding: 30rpx 0;
  letter-spacing: 2rpx;
}

.currItem {
  color: #000;
  position: relative;
}

.currItem:after {
  content: "";
  width: 6rpx;
  height: 60rpx;
  background: #888;
  position: absolute;
  left: 0;
  top: 27rpx;
  border-radius: 3rpx;
}

/* 左侧导航栏-End */

/* 右侧内容-Start */

.category-content {
  width: 570rpx;
  min-height: 100%;
  overflow: hidden;
  padding: 15rpx;
  box-sizing: border-box;
}

.category-products {
  width: 100%;
  margin-bottom: 60rpx;
  height: 200rpx;
  min-height: 100%;
  box-sizing: border-box;
}

.category-banner {
  width: 100%;
  height: 200rpx;
}

.category-banner image {
  width: 100%;
  height: 100%;
}

.category-title {
  font-size: 38rpx;
  color: #333;
  height: 100rpx;
  line-height: 100rpx;
  font-weight: bolder;
  text-align: center;
  position: relative;
}

.category-title::before {
  position: absolute;
  width: 130rpx;
  height: 2rpx;
  background: #333;
  content: '';
  left: 90rpx;
  top: 50%;
  transform: translateY(-50%);
}

.category-title::after {
  position: absolute;
  width: 120rpx;
  height: 2rpx;
  background: #333;
  content: '';
  right: 90rpx;
  top: 50%;
  transform: translateY(-50%);
}

.category-product {
  display: inline-block;
  width: 180rpx;
  text-align: center;
  font-size: 32rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.product-image {
  width: 100%;
  height: 140rpx;
  overflow: hidden;
  display: inline-block;
  margin-bottom: 15rpx;
  border-radius: 50%;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.product-desc {
  height: 80rpx;
}

/* 右侧内容-End */
