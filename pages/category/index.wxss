/* pages/category/index.wxss */

page {
  height: 100%;
}

.main {
  height: 100%;
  display: flex;
  justify-content: space-between;
}

/* 左侧导航栏-Start */

.category-nav {
  width: 200rpx;
  height: 100%;
  border-right: 1px solid #333;
  background: #efefef;
  color: #333;
  text-align: center;
  font-size: 34rpx;
}

.category-item {
  padding: 15rpx 0;
  border-bottom: 1px dashed #888;
}
.currItem{
  background: #fff;
  color: #888;
}
/* 左侧导航栏-End */

/* 右侧内容-Start */

.category-content {
  height: 100%;
  overflow: hidden;
  padding: 20rpx;
  box-sizing: border-box;
}

.category-products {
  margin-bottom: 60rpx;
  min-height: 100%;
  border: 1px solid red;
  box-sizing: border-box;
}

.category-banner {
  width: 100%;
  height: 200rpx;
}

.category-banner image {
  width: 100%;
  height: 100%;
  
}

.category-title {
  font-size: 38rpx;
  color: #333;
  height: 100rpx;
  line-height: 100rpx;
  font-weight: bolder;
  text-align: center;
  position: relative;
}

.category-title::before {
  position: absolute;
  width: 120rpx;
  height: 2rpx;
  background: #333;
  content: '';
  left: 90rpx;
  top: 50%;
  transform: translateY(-50%);
}

.category-title::after {
  position: absolute;
  width: 120rpx;
  height: 2rpx;
  background: #333;
  content: '';
  right: 90rpx;
  top: 50%;
  transform: translateY(-50%);
}

.category-product {
  display: inline-block;
  margin: 0 20rpx 20rpx 0;
  width: 160rpx;
  text-align: center;
}

.category-product:nth-child(3n-1) {
  margin-right: 0;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  display: inline-block;
  border-radius: 50%;
}

.category-desc {
  border: 1px solid yellow;
}

/* 右侧内容-End */
