/* pages/category/index.wxss */

page {
  height: 100%;
}
page,.category-nav{
    height:100vh;
}

/* 去掉默认滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.page {
  height: 100%;
  display: flex;
  justify-content: space-between;
}

/* 左侧导航栏-Start */

.category-nav {
  width: 220rpx;
  height: 100%;
  border-right: 1px solid #efefef;
  color: #888;
  text-align: center;
  font-size: 36rpx;
  position: relative;
  box-sizing: border-box;
}

.category-nav-item{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  margin-bottom: 20rpx;
}

.currItem {
  color: var(--mainColor);
  position: relative;
  font-weight: bold;
}

.currItem:after {
  content: '';
  width: 6rpx;
  height: 60rpx;
  background: var(--mainColor);
  position: absolute;
  left: 0;
  top: 15rpx;
}

/* 左侧导航栏-End */

/* 右侧内容-Start */

.category-content{
  width:100%;
  padding-left: 20rpx;
}
.category-item-content{
  overflow: hidden;
}

.category-item-title{
  display: block;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: bold;
  border-bottom: 1px solid #efefef;
  padding-top: 15rpx;
}
.category-item-body{
  overflow: hidden;
  
}
.category-item{
  width: 31%;
  display: inline-block;
  margin: 15rpx 0;
  text-align: center;
}
.category-item:nth-child(3n-1){
  margin-left: 15rpx;
  margin-right: 15rpx;
}
.category-item-image {
  background: #efefef;
  border-radius: 15rpx;
}
.category-item-image image{
  width:100%;
  height: 150rpx;
}
.category-item-text{
  font-size: 24rpx;
  color: #999;
}
