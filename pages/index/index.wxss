/**index.wxss**/
.carouselImg{
  width: 100%;
}
/* 搜索框-Start  */
.search{
  padding: 20rpx;
}
.searchBar{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%; height:70rpx;
  color: #111;
  border: 1px solid #333;
  border-radius: 20rpx;
}
.searchIcon{
  margin-right: 10rpx;
}
/* 搜索框-End  */
/* 精选主题-Start  */
.selectedCenter{
  width: 100%;
}
.selected-top{
  display: flex;
  justify-content: space-between;
}
.selected-small{
  flex:1;
  width: 375rpx; height: 375rpx;
  border: 3rpx solid #fff;
  overflow: hidden;
}
.selected-small image,.selected-big image{
  width: 100%; height: 100%;
}
.selected-big{
  border: 3rpx solid #fff;
  width: 100%; height: 375rpx;
}
/* 精选主题-End  */
/* 最近新品-Start  */
.latestCenter{
}
.lastest-list{
  width: 365rpx;
  display: inline-block;
  margin: 0 20rpx 20rpx 0; 
  text-align: center;
  background: #efefef;
}
.lastest-list:nth-child(odd){
  margin-right: 0;
}
.lastest-image{
  width: 100%; height: 200rpx;
}
.lastest-image image{
  width: 100%; height: 100%;
}
.lastest-title,.lastest-price{
  margin: 10rpx 0;
}
.lastest-title{
  font-weight: bold;
  font-size: 28rpx;
}
.lastest-price{
  color: red;
  font-size: 26rpx;
}
/* 最近新品-End  */
