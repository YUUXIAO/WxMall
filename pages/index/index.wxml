<!--
index.wxml
商城首页
-->
<view class="main">
  <!--首页轮播图  -->
  <swiper indicator-dots="true" autoplay="true" interval="{{interval}}" duration="{{duration}}" circular="true">
    <block wx:for="{{imgUrls}}" wx:key="{{index}}">
      <swiper-item>
        <image src="{{item}}" class="carouselImg" />
      </swiper-item>
    </block>
  </swiper>
  <!-- 搜索框  -->
  <view class='search'>
    <navigator url='/pages/search/index'>
      <view class='searchBar'>
        <icon class='searchIcon' type="search" size="14"></icon> 搜索
      </view>
    </navigator>
  </view>
  <!-- 精选主题  -->
  <view class='selectedCenter'>
    <view class='selected-title page-title'>
      <text>精选主题</text>
    </view>
    <view class='selected-goods'>
      <view class='selected-top'>
        <navigator url='/pages/detail/index'>
          <view class='selected-small'>
            <image src='{{selectedImg}}'></image>
          </view>
        </navigator>
        <view class='selected-small'>
          <image src='{{selectedImg}}'></image>
        </view>
      </view>
      <view class='selected-bottom'>
        <view class='selected-big'>
          <image src='{{selectedImg}}'></image>
        </view>
      </view>
    </view>
  </view>
  <!-- 最近新品 -->
  <view class='latestCenter'>
    <view class='lastest-title page-title'>
      <text>最近新品</text>
    </view>
    <view class='lastest-list' wx:for='{{lastestLists}}' wx:for-item='item'>
      <view class='lastest-image'>
        <image src='{{item.image}}'></image>
      </view>
      <view class='lastest-title'>
        <text>{{item.title}}</text>
      </view>
      <view class='lastest-price'>
        <text>$ {{item.price}}</text>
      </view>
    </view>
  </view>
</view>