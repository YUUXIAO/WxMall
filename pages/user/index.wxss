/* pages/user/index.wxss */
.page{
  min-height: 100%;
  padding:0;
}

.user-header-box{
  border: 1px solid green;
  background: #b5272e;
  padding: 20rpx 0;
}

.user-header-avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-header-name{
  color: #fff;
}




/* 我的订单 */
.user-orders-box{
  border: 1px solid blue;
  padding: 20rpx;
  box-sizing: border-box;
}
.user-orders-title{
  font-size: 28rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #efefef;
}
.icon-enterinto_fill{
  color: #b5272e;
}
.user-orders-list{
  padding: 15rpx 0;
}
.user-orders-item{
  font-size: 26rpx;
}
.user-orders-icon{
  font-size: 42rpx;
  color: #aaa;
}


/* 用户信息 */
.user-info-box{
  padding: 0 20rpx;
}
.user-info-icon{
  margin-right: 20rpx;
}
.user-info-item{
  font-size: 30rpx;
  padding: 15rpx 0;
  border-bottom: 1px solid #efefef;
}