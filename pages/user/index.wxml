<!-- pages/user/index.wxml -->
<view class="page">
  <!-- 用户头像信息 -->
  <view class="dis-flex flex-dir-column flex-y-center user-header-box">
    <view class="user-header-avatar">
      <open-data class="userAvatar" lang="zh_CN" type="userAvatarUrl"></open-data>
    </view>
    <view class="user-header-name">
      <open-data type="userNickName"></open-data>
    </view>
  </view>
  <!-- 我的订单 -->
  <view class="user-orders-box">
    <view class="dis-flex flex-x-between flex-y-center user-orders-title" bindtap="enterOrders">
      <text>我的订单</text>
      <view>
        <text>全部订单</text>
        <text class="iconfont icon-enterinto_fill" />
      </view>
    </view>
    <view class="dis-flex flex-x-between flex-y-center user-orders-list">
      <view class="dis-flex flex-dir-column flex-y-center user-orders-item" catchtap="enterOrder" data-index="0">
        <text class="iconfont icon-daifukuan user-orders-icon" />
        <text>待付款</text>
      </view>
      <view class="dis-flex flex-dir-column flex-y-center user-orders-item" catchtap="enterOrder" data-index="1">
        <text class="iconfont icon-icon-test user-orders-icon" />
        <text>待发货</text>
      </view>
      <view class="dis-flex flex-dir-column flex-y-center user-orders-item" catchtap="enterOrder" data-index="2">
        <text class="iconfont icon-yifahuodefuben user-orders-icon" />
        <text>待收货</text>
      </view>
      <view class="dis-flex flex-dir-column flex-y-center user-orders-item" catchtap="enterOrder" data-index="3">
        <text class="iconfont icon-daipingjia user-orders-icon" />
        <text>待评价</text>
      </view>
      <view class="dis-flex flex-dir-column flex-y-center user-orders-item" catchtap="enterOrder" data-index="4">
        <text class="iconfont icon-yiwancheng user-orders-icon" />
        <text>已完成</text>
      </view>
    </view>
  </view>
  <view class="user-info-box">
    <view class="user-info-item" bindtap="intoAddress">
      <text class="iconfont icon-yiwancheng user-info-icon" />
      <text>收货地址</text>
    </view>
  </view>
</view>