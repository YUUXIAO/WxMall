/* search.wxss*/

.main {
  padding: 0 20rpx;
}

/*  搜索区域-Start */

.searchCenter {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  padding: 20rpx 0;
}

.search-bar {
  flex: 1;
  font-size: 32rpx;
  padding: 6rpx 10rpx 6rpx 70rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
}

.search-icon {
  position: absolute;
  width: 50rpx;
  padding-left: 20rpx;
}

.cancel-btn {
  font-size: 32rpx;
  padding-left: 20rpx;
}

