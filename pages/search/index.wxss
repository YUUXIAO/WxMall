/* common */

.search-title {
  font-size: 36rpx;
  font-weight: bolder;
  padding: 20rpx 0;
}

.tag {
  border: 1px solid #888;
  display: inline-block;
  border-radius: 20rpx;
  font-size: 28rpx;
  padding: 6rpx 12rpx;
  margin: 0 20rpx 20rpx 0;
}
