/* pages/detail/index.wxss */

.main {
  padding-bottom: 130rpx;
}

/* 详情描述 */

.detail-images {
  width: 100%;
  height: 500rpx;
}

swiper {
  width: 100%;
  height: 100%;
}

.carouselImg {
  width: 100%;
  height: 100%;
}

/* 详情基本信息 */

.detail-info {
  padding: 30rpx 10rpx;
}
.detail-price .price {
  color: red;
  font-weight: bolder;
}

.detail-price .oldPrice {
  color: #999;
  font-size: 24rpx;
  padding-left: 20rpx;
  display: inline-block;
}

.oldPrice text {
  text-decoration: line-through;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 15rpx 0;
}

.detail-base {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #888;
}

/* 详情操作 */

.detail-tabs {
  border-top: 1px solid #888;
}

.detail-nav {
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
}

.detail-tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  border-bottom: 1px solid #fff;
}

.detail-cur {
  border-bottom: 5rpx solid #888;
}

/* 详情内容 */

.swiper-tabs-show {
  height: 300rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.swiper-tabs-show swiper-item {
  width: 100%;
  box-sizing: border-box;
}

/* 底部操作栏-Start */

.goods-operation {
  display: flex;
  width: 100%;
  height: 100rpx;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  background: #fff;
}

.goods-operation view {
  height: 100%;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-right: 1px solid #efefef;
}

.shoppingCart, .shoppingStore {
  flex: 1;
}

.buyImmediatly, .addtoCart {
  flex: 2;
}

.shoppingCart image, .shoppingStore image {
  width: 64rpx;
  height: 64rpx;
}

.addtoCart {
  background: red;
  color: #fff;
  border-right: 0;
}

/* 底部操作栏-End */

/* 商品选择数量 */

.chooseNum {
  width: 100%;
  height: 500rpx;
  box-sizing: border-box;
  background: #fff;
  position: fixed;
  bottom: -500rpx;
  z-index: 2;
}

.choose-top {
  height: 240rpx;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.choose-top>view:first-child {
  display: flex;
  justify-content: flex-start;
}

.choose-image {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
}

.choose-image image {
  width: 100%;
  height: 100%;
}

.choose-base {
  display: flex;
  height: 100%;
  padding: 20rpx 0 20rpx 20rpx;
  box-sizing: border-box;
  flex-direction: column;
  justify-content: space-between;
  font-weight: bold;
  font-size: 32rpx;
}

.choose-title {
  width: 380rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.choose-price {
  color: red;
}

.choose-close {
  width: 50rpx;
  height: 50rpx;
  border: 1px solid #aaa;
  font-size: 32rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 50rpx;
  color: #aaa;
}

.choose-bottom {
  width: 100%;
  height: 160rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}

.choose-bottom text {
  font-size: 42rpx;
  font-weight: bold;
}

.countGroup {
  border: 1px solid #aaa;
  width: 240rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.countGroup view {
  height: 100%;
  flex: 1;
  background: #efefef;
  line-height: 80rpx;
  text-align: center;
}

.countGroup .count {
  border-left: 1px solid #aaa;
  border-right: 1px solid #aaa;
  background: #fff;
}

.addCartBtn {
  width: 100%;
  color: #fff;
  background: red;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-weight: bold;
}

/* mask遮罩层-Start */

.mask {
  background: rgba(0, 0, 0, 0.9);
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1;
}

/* mask遮罩层-End */
