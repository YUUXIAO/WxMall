<!-- pages/detail/index.wxml -->
<view class='main'>
  <!-- 详情轮播图 -->
  <view class='detail-images'>
    <swiper indicator-dots="true" autoplay="true" interval="{{swiper.interval}}" duration="{{swiper.duration}}" circular="true">
      <block wx:for="{{swiper.bannerImage}}" wx:key="{{index}}">
        <swiper-item>
          <image src="{{item}}" class="carouselImg" mode="aspectFill" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 详情信息 -->
  <view class='detail-info-box'>
    <view class="detail-price-box">
      <view class="detail-price">
        <text class="detail-retailPrice">￥{{goodDetail.retailPrice}}</text>
        <text class="detail-delivery"> {{goodDetail.deliver}} </text>
        <text class="detail-counterPrice">￥{{goodDetail.counterPrice}}</text>
      </view>
      <view class="detail-sell">
        <text class="detail-sellVolume">已销{{goodDetail.sellVolume}}</text>
      </view>
    </view>
    <view class="dis-flex flex-x-between detail-title-box">
      <view class="dis-flex flex-dir-column flex-x-between flex detail-title-info">
        <text class="detail-title">{{goodDetail.name}}</text>
        <text class="detail-simpleDesc"> {{goodDetail.simpleDesc}} </text>
      </view>
      <view class="dis-flex flex-x-center flex-y-center detail-share-box">
        <view class="dis-flex flex-dir-column flex-x-between">
          <text class="iconfont icon-share" />
          <text class="detail-share-text">分享</text>
        </view>
      </view>
    </view>
    <view class="dis-flex detail-tag-box">
      <view class="detail-tag" wx:for="{{goodDetail.itemTagList}}" wx:key="index">
        <text class="iconfont icon-share" /> {{item.name}}
      </view>
    </view>
  </view>
  <!-- 用户评价 -->
  <view class="user-comments-box">
    <view class="dis-flex flex-x-between flex-y-center user-comments-title">
      <view class="user-comments-count">用户评价( {{goodRates.defGoodCmtCnt}} )</view>
      <view class="user-comments-rate">
        {{goodRates.goodCmtRate}} 好评
        <text class="iconfont icon-arrowright" style="font-size:24rpx;" />
      </view>
    </view>
    <view class="user-comments-cont" bindtap="getComment">
       <view class="dis-flex flex-x-start flex-y-center comment-header">
        <view class="user-comment-avatar">
          <image src='{{goodDetail.hotSaleListBottomInfo.iconUrl}}' mode="aspectFill"></image>
        </view>
        <text class="comment-username">{{goodDetail.hotSaleListBottomInfo.name?goodDetail.hotSaleListBottomInfo.name:'匿名'}}</text>
      </view>
      <view class="comment-content">
        <text>{{goodDetail.hotSaleListBottomInfo.content}}</text>
      </view>
    </view>
  </view>
  <!-- 详情操作 -->
  <view class='detail-tabs'>
    <view class='detail-nav'>
      <view class='detail-tab {{ currentTab == 0 ?"detail-cur" :"" }}' bindtap='tabClick' data-index='0'>
        商品详情
      </view>
      <view class='detail-tab {{ currentTab == 1 ?"detail-cur" :"" }}' bindtap='tabClick' data-index='1'>
        用户评价
      </view>
      <view class='detail-tab {{ currentTab == 2 ?"detail-cur" :"" }}' bindtap='tabClick' data-index='2'>
        更多推荐
      </view>
    </view>
  </view>
  <swiper current='{{currentTab}}' duration="300" class='swiper-tabs-show' bindchange='tabsChange'>
    <swiper-item>商品详情</swiper-item>
    <swiper-item>用户评价</swiper-item>
    <swiper-item>
      <view class="recommend-list-box">
        <view class="recommend-list" wx:for="{{recommendList}}" wx:key="index">
          <view class="recommend-image-box">
            <image src="{{item.listPicUrl}}" model='aspectFill'></image>
          </view>
          <text class="recommend-title list-hidden">{{item.name}}</text>
          <text class="recommend-price">￥{{item.retailPrice}}</text>
          <view class="dis-flex  recommend-tags-box">
            <text class="recommend-tag" wx:if="{{item.promTag}}">{{item.promTag}}</text>
          </view>
        </view>
      </view>
    </swiper-item>
  </swiper>
  
  <!-- 底部操作栏 -->
  <view class='goods-operation'>
    <view class='shoppingCart'>
      <image src='../../images/detail/cart.png'></image>
    </view>
    <view class='shoppingStore'>
      <image src='../../images/detail/star.png'></image>
    </view>
    <view class='buyImmediatly'>立即购买</view>
    <view class='addtoCart' bindtap="showChooseNum">加入购物车</view>
  </view>
  <!-- 商品选择数量 -->
  <view class='chooseNum' animation="{{animation}}">
    <view class='choose-top'>
      <view>
        <view class='choose-image'>
          <image src='{{bannerImage[0]}}' mode='aspectFill'></image>
        </view>
        <view class='choose-base'>
          <view class='choose-title'>{{title}}</view>
          <view class='choose-price'>￥ {{price}}</view>
        </view>
      </view>
      <view class='choose-close' bindtap='closeChooseNum'>X</view>
    </view>
    <view class='choose-bottom'>
      <view>
        <text>购买数量</text>
      </view>
      <view class='countGroup'>
        <view class='reduceBtn' bindtap='reduceCount'>-</view>
        <view class='count'>{{ count }}</view>
        <view class='increaseBtn' bindtap='increaseCount'>+</view>
      </view>
    </view>
    <view class='addCartBtn' bindtap='addtoCart'>加入购物车</view>
  </view>
  <!-- mask遮罩层 -->
  <view class='{{ maskShow ? "mask" : "" }}'></view>
</view>