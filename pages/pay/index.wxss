/* pages/pay/index.wxss */
@import "../../templates/devideCell/index.wxss";

.page{
    background: #efefef;
    min-height: 100vh;
    padding: 0;
    font-size: 30rpx;
    padding-top: 20rpx;
}
.total-box{
    background: #fff;
    padding: 20rpx;
}


.pay-methods{
    margin-top: 20rpx;
}
.method-title{
    padding: 10rpx 0;
}
.method-item{
    background: #fff;
    padding: 20rpx;
}
.method-item .iconfont{
    font-size: 42rpx;
}
.method-item .icon-weixinzhifu{
    color: #439057;
    margin: 0 10rpx 0 20rpx;
}
.icon-choose{
    color: var(--mainColor)
}
.pay-tips{
    font-size: 24rpx;
    padding: 10rpx 0;
}

.pay-btn{
    width: 100%;
    height: 100rpx;
    background: var(--mainColor);
    font-size: 40rpx;
    letter-spacing: 10rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    color: #fff;
}